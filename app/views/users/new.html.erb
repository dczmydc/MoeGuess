<h2>Sign Up</h2>

<%= form_tag "/users" do %>

  <p>
    <%= label_tag "name" %>
    <%= text_field_tag "name", @user.name, autofocus: true %>
  </p>

  <p>
    <%= label_tag "password" %>
    <%= password_field_tag "password", @user.password %>
  </p>

  <p>
      <%= submit_tag "Join us!", class: 'button' %>

      or

      <%= link_to "Back to homepage", "/users" %>
  </p>

<% end %>