
<h2>Sign In</h2>

<%= form_tag "/login" do %>

    <p>
      <%= label_tag "name" %>
      <%= text_field_tag "name", "", autofocus: true %>
    </p>

    <p>
      <%= label_tag "password" %>
      <%= password_field_tag "password" %>
    </p>

    <p>
        <%= submit_tag "Log in", class: 'button' %>

        or

        <%= link_to "Back to homepage", "/" %>
    </p>

<% end %>